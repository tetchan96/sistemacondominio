<%= form_for(despesa) do |f| %>
  <% if despesa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(despesa.errors.count, "error") %> prohibited this despesa from being saved:</h2>

      <ul>
      <% despesa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :data %>
    <%= f.date_select :data %>
  </div>

  <div class="field">
    <%= f.label :valor %>
    <%= f.text_field :valor %>
  </div>

  <div class="field">
    <%= f.label :natureza %>
    <%= f.text_field :natureza %>
  </div>

  <div class="field">
    <%= f.label :ativo %>
    <%= f.check_box :ativo %>
  </div>

  <div class="field">
    <%= f.label :data_inclusao %>
    <%= f.datetime_select :data_inclusao %>
  </div>

  <div class="field">
    <%= f.label :data_alteracao %>
    <%= f.datetime_select :data_alteracao %>
  </div>

  <div class="field">
    <%= f.label :descricao_despesa_receita_id %>
    <!--<%= f.text_field :descricao_despesa_receita_id %>-->
    <%= f.select :descricao_despesa_receita_id, @descricao_despesa_receita.collect { |descricao_despesa_receita| [descricao_despesa_receita.descricao, descricao_despesa_receita.id] } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
