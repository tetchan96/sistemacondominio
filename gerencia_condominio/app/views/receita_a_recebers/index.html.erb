<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1>Receita a Receber</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li><a href="#">Dashboard</a></li>
          <li class="active">Receita a Receber</li>
        </ol>
      </div>
    </div>
  </div>
</div>
  
<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">

      <p id="notice"><%= notice %></p>
      <!--<h1>Descricao Tipos</h1>-->

      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Receitas a Receber</strong>
          </div>
          <div class="card-body">
            <table id="bootstrap-data-table" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Valor</th>
      <th>Data</th>
      <th>Natureza</th>
      <!--<th>Ativo</th>-->
      <!--<th>Data inclusao</th>-->
      <!--<th>Data alteracao</th>-->
      <th>Apartamento</th>
      <th>Descricao tipo</th>
      <th>Morador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receita_a_recebers.each do |receita_a_receber| %>
      <tr>
        <td><%= receita_a_receber.valor %></td>
        <td><%= receita_a_receber.data %></td>
        <td><%= receita_a_receber.natureza %></td>
        <!--<td><%= receita_a_receber.ativo %></td>-->
        <!--<td><%= receita_a_receber.data_inclusao %></td>-->
        <!--<td><%= receita_a_receber.data_alteracao %></td>-->
        <td><%= receita_a_receber.apartamento.unidade %></td>
        <td><%= receita_a_receber.descricao_tipo.nome %></td>
        <td><%= receita_a_receber.morador.nome %></td>
        <td><%= link_to 'Show', receita_a_receber %></td>
        <td><%= link_to 'Edit', edit_receita_a_receber_path(receita_a_receber) %></td>
        <td><%= link_to 'Destroy', receita_a_receber, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
            </table>
            <%= link_to 'Adicionar Receita a Receber', new_receita_a_receber_path, class: "btn btn-outline-primary", role:"button" %>
          </div>
        </div>
      </div>
    </div>
  </div><!-- .animated -->
</div><!-- .content -->

