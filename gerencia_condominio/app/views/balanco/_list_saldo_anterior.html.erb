<div class="col-lg-12">
  <div class="card">
      <div class="card-header">
          <strong class="card-title">Saldo Anterior</strong>
      </div>
      <div class="card-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Jan.</th>
                <th scope="col">Fev.</th>
                <th scope="col">Mar.</th>
                <th scope="col">Abr.</th>
                <th scope="col">Mai.</th>
                <th scope="col">Jun.</th>
                <th scope="col">Julo</th>
                <th scope="col">Ago.</th>
                <th scope="col">Set.</th>
                <th scope="col">Out.</th>
                <th scope="col">Nov.</th>
                <th scope="col">Dez.</th>
                <th scope="col">Total</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <% @saldo_anterior.each do |value| %>
                  <td><%= value %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
      </div>
  </div>
</div>