<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1>Despesa</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li><a href="#">Dashboard</a></li>
          <li class="active">Despesa</li>
        </ol>
      </div>
    </div>
  </div>
</div>
  
<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">

      <p id="notice"><%= notice %></p>
      <!--<h1>Descricao Tipos</h1>-->

      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Despesas</strong>
          </div>
          <div class="card-body">
            <table id="bootstrap-data-table" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Data</th>
                  <th>Valor</th>
                  <th>Natureza</th>
                  <!--<th>Ativo</th>-->
                  <!--<th>Data inclusao</th>-->
                  <!--<th>Data alteracao</th>-->
                  <th>Descricao tipo</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
            
              <tbody>
                <% @despesas.each do |despesa| %>
                  <tr>
                    <td><%= despesa.data %></td>
                    <td><%= despesa.valor %></td>
                    <td><%= despesa.natureza %></td>
                    <!--<td><%= despesa.ativo %></td>-->
                    <!--<td><%= despesa.data_inclusao %></td>-->
                    <!--<td><%= despesa.data_alteracao %></td>-->
                    <td><%= despesa.descricao_tipo.nome %></td>
                    <td><%= link_to 'Exibir', despesa %></td>
                    <td><%= link_to 'Editar', edit_despesa_path(despesa) %></td>
                    <td><%= link_to 'Excluir', despesa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= link_to 'Adicionar Despesa', new_despesa_path, class: "btn btn-outline-primary", role:"button" %>
          </div>
        </div>
      </div>
    </div>
  </div><!-- .animated -->
</div><!-- .content -->