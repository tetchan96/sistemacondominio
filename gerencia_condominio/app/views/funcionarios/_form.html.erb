<%= form_for(funcionario) do |f| %>
  <% if funcionario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(funcionario.errors.count, "error") %> prohibited this funcionario from being saved:</h2>

      <ul>
      <% funcionario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <%= f.label :nome, class: "form-control-label", for: :nome %>
    </div>
    <div class="col col-md-6">
      <%= f.text_field :nome, class:"form-control", placeholder: :nome %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <%= f.label :tel, class: "form-control-label", for: :tel %>
    </div>
    <div class="col col-md-6">
      <%= f.text_field :tel, class:"form-control", placeholder: :tel %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <%= f.label :dias_autorizados, class: "form-control-label", for: :dias_autorizados %>
    </div>
    <div class="col col-md-6">
      <%= f.text_field :dias_autorizados, class:"form-control", placeholder: :dias_autorizados %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>

<div class="col col-md-6 hide">
  <div class="form-group">
    <div class="col col-md-6">
      <%= f.label :ativo, class: "form-control-label", for: :ativo %>
    </div>
    <div class="col col-md-6">
      <%= f.check_box :ativo, class:"form-control", placeholder: :ativo %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>

<div class="col col-md-6 hide">
  <div class="form-group">
    <div class="col col-md-6">
      <%= f.label :data_inclusao, class: "form-control-label", for: :data_inclusao %>
    </div>
    <div class="col col-md-6">
      <%= f.datetime_select :data_inclusao, class:"form-control", placeholder: :data_inclusao %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>

<div class="col col-md-6 hide">
  <div class="form-group">
    <div class="col col-md-6">
      <%= f.label :data_alteracao, class: "form-control-label", for: :data_alteracao %>
    </div>
    <div class="col col-md-6">
      <%= f.datetime_select :data_alteracao, class:"form-control", placeholder: :data_alteracao %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-6">
      <%= f.label :apartamento_id, class: "form-control-label", for: :apartamento_id %>
    </div>
    <div class="col col-md-6">
      <%= f.select :apartamento_id, @apartamento.collect { |apartamento| [apartamento.unidade, apartamento.id] }, {}, { :class => 'form-control', :tabindex => '-1' }  %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col col-md-12">
    <div class="row">
      <%= f.submit class: "btn btn-primary btn-sm" %>
      <!--<button type="submit" class="btn btn-primary btn-sm">
        <i class="fa fa-dot-circle-o"></i> Submit
      </button>-->
      <button type="reset" class="btn btn-danger btn-sm">
        <i class="fa fa-ban"></i> Reset
      </button>
    </div>
  </div>
</div>
<% end %>
