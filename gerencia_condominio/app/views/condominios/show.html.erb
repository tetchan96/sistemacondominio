<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1> Condomínio</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li><a href="#">Dashboard</a></li>
          <li><a href="#">Condomínio</a></li>
          <li class="active">ID</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <strong>Condomínio: ID</strong>
          </div>
          <div class="card-body card-block">
            

<p id="notice"><%= notice %></p>
<p>
  <strong>Nome:</strong>
  <%= @condominio.nome %>
</p>
<p>
  <strong>Saldo:</strong>
  <%= @condominio.saldo %>
</p>

<p>
  <strong>Fundo reserva:</strong>
  <%= @condominio.fundo_reserva %>
</p>

</div>
        </div>
        </div>
        </div>
        <div class="form-group">
        <%= link_to 'Editar', edit_condominio_path(@condominio), class: "btn btn-outline-primary", role:"button" %>
        <!--<%= link_to 'Voltar', condominios_path, class: "btn btn-outline-primary", role:"button" %>-->
        </div>
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Apartamentos</strong>
          </div>
          <div class="card-body">
            <%= render 'apartamentos/list', apartamentos: @apartamentos %>
            <%= link_to 'Adicionar Apartamento', new_apartamento_path, class: "btn btn-outline-primary", role:"button" %>
          </div>
        </div>      
      
      </div>
    </div>
  </div><!-- .animated -->
</div><!-- .content -->

