      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Condomínios</strong>
          </div>
          <div class="card-body">
            <%= render 'list', condominios: @condominios %>            
            <%= link_to 'Adicionar Condominio', new_condominio_path, class: "btn btn-outline-primary", role:"button" %>
          </div>
        </div>
      </div>
