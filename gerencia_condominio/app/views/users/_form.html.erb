<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <div class="alert-error">
      O formulário contém <%= pluralize(@user.errors.count, "erro") %>.
      </div>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-4">
      <%= f.label :name, class: "form-control-label", for: :name %>
    </div>
    <div class="col col-md-8">
      <%= f.text_field :name, class:"form-control", placeholder: :name %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-4">
      <%= f.label :login, class: "form-control-label", for: :login %>
    </div>
    <div class="col col-md-8">
      <%= f.text_field :login, class:"form-control", placeholder: :login %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>

  <div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-4">
      <%= f.label :password, class: "form-control-label", for: :password %>
    </div>
    <div class="col col-md-8">
      <%= f.password_field :password, class:"form-control", placeholder: :password %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>

<div class="col col-md-6">
  <div class="form-group">
    <div class="col col-md-4">
      <%= f.label :password_field, class: "form-control-label", for: :password_field %>
    </div>
    <div class="col col-md-8">
      <%= f.password_field :password_field, class:"form-control", placeholder: :password_field %>
      <!--<small class="form-text text-muted">This is a help text</small></div>-->
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col col-md-12">
    <div class="row">
      <%= f.submit class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>
<% end %>