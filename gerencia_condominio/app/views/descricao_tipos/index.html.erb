<div class="breadcrumbs">
  <div class="col-sm-4">
    <div class="page-header float-left">
      <div class="page-title">
        <h1>Descrição Despesa/Receita</h1>
      </div>
    </div>
  </div>
  <div class="col-sm-8">
    <div class="page-header float-right">
      <div class="page-title">
        <ol class="breadcrumb text-right">
          <li><a href="#">Dashboard</a></li>
          <li class="active">Descrição Despesa/Receita</li>
        </ol>
      </div>
    </div>
  </div>
</div>
  
<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">

      <p id="notice"><%= notice %></p>
      <!--<h1>Descricao Tipos</h1>-->

      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Descrição Despesa/Receita</strong>
          </div>
          <div class="card-body">
            <table id="bootstrap-data-table" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Nome</th>
                  <th>Natureza</th>
                  <th>Valor fixo</th>
                  <th>Ativo</th>
                  <th>Data inclusao</th>
                  <th>Data alteracao</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @descricao_tipos.each do |descricao_tipo| %>
                  <tr>
                    <td><%= descricao_tipo.nome %></td>
                    <td><%= descricao_tipo.natureza %></td>
                    <td><%= descricao_tipo.valor_fixo %></td>
                    <td><%= descricao_tipo.ativo %></td>
                    <td><%= descricao_tipo.data_inclusao %></td>
                    <td><%= descricao_tipo.data_alteracao %></td>
                    <td><%= link_to 'Exibir', descricao_tipo %></td>
                    <td><%= link_to 'Editar', edit_descricao_tipo_path(descricao_tipo) %></td>
                    <td><%= link_to 'Deletar', descricao_tipo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= link_to 'Adicionar Descrição', new_descricao_tipo_path, class: "btn btn-outline-primary", role:"button" %>
          </div>
        </div>
      </div>
    </div>
  </div><!-- .animated -->
</div><!-- .content -->